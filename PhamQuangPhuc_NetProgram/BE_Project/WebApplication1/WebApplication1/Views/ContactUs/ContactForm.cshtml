    <style>

    </style>
    <script type="text/javascript">
        var contactCaptcha;
        // var widgetId2;
        console.log(contactCaptcha);
        var onloadCallback = function () {
            contactCaptcha = grecaptcha.render('captcha', {
                'sitekey': '6LeopYUpAAAAADxWOfgRfwhmKFhGGzGVVU_o0n7L',
                'theme': 'light',
                'callback': function (response) {
                    // Update the value of the hidden input field with the reCAPTCHA response
                    document.getElementById('input-captcha').value = response;
                }
            });

        };

    </script>



</head>

<body>

    <div style="width: 100%;" class="contact">

        <div class="ui vertical stripe quote segment">
            <div class="ui equal width stackable internally celled grid">
                <div class="center aligned row " style="width: 80%;">
                    <!-- ui inforamtion contact -->
                    <div class="column ">
                        <div class="inform-contact">
                            <div class="icon-btn-area">
                                <a href="/contact-us">
                                    <img src="https://www.aegona.com/themes/gavias_comely/assets/icon/logo-small.png"
                                         width="19" height="19" alt="aegona" loading="lazy">
                                    <span style="color: aliceblue; font-size: 12px;">connect with us</span>
                                </a>
                            </div>
                            <div class="title-area">
                                <h1>
                                    <span>100%</span>
                                    <br> CUSTOMER SUPPORT
                                </h1>
                            </div>
                            <div class="slogan-area">
                                <h2>THERE'RE SEVERAL WAYS TO CONNECT WITH US</h2>
                            </div>
                            <div class="description-area">
                                <h4>
                                    You can reach our customer service at
                                    <span>
                                        <a href="tel: 84 28 71092939">84-28-71092939</a>
                                    </span>
                                    or
                                    <span>
                                        <a href="mailto: contact@aegona.com">contact@aegona.com</a>
                                    </span>
                                    For additional assistance, we offers the following support channels
                                    <a class="aegona-link" href="/contact-us">Contact Us</a>
                                </h4>
                            </div>
                        </div>

                    </div>

                    <!-- ui contact-form -->
                    <div class="column">
                        <form class="contact-form ui form" method="post" asp-action="AddContactForm">

                            <h2><b>Contact Us</b></h2>
                            <div class="field input-box">
                                <input class="input-field" type="text" asp-for=" FullName" required>
                                <label>FULL NAME</label>
                                <span asp-validation-for="FullName" class="text-danger"></span>

                            </div>
                            <div class="field input-box">
                                <input class="input-field" type="text" asp-for="CompanyName" required>
                                <label>COMPANY NAME</label>
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="field input-box">
                                <input class="input-field" type="text" asp-for="BusinessPhone" required>
                                <label>BUSINESS PHONE</label>
                                <span asp-validation-for="BusinessPhone" class="text-danger"></span>
                            </div>
                            <div class="field input-box">
                                <input class="input-field" type="text" asp-for="Email" required>
                                <label>EMAIL</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="ui form">
                                <div class="field input-box">
                                    <textarea class="input-field" asp-for="Message" required></textarea>
                                    <label>MESSAGE</label>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>
                            <div style="display: flex; justify-content: center; margin: 10px;">
                                <input type="hidden" asp-for="Captcha" id="input-captcha" />
                                <div id="captcha"> </div>
                                <span asp-validation-for="Captcha" class="text-danger"></span>
                                <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
                            </div>
                            @if (TempData["ErrorMessage"] != null && TempData["color"]!=null)
                            {
                                <div class="ui green message">@TempData["ErrorMessage"]</div>
                            }
                            else if (TempData["ErrorMessage"] != null && TempData["color"] ==null)
                            {
                                <div class="alert alert-danger" style="color:black">@TempData["ErrorMessage"]</div>
                            }else{

                            }
                            <div class="btn-submit">
                                <input type="submit" value="SEND MESSAGE">
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger left"></div>
                        </form>

                       
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


</html>
