    <style>
        td >i .icon, i.icons
        {
            font-size: 2em;
        }
        .listContact{
            min-height:80vh;
            padding-left:5%;
            padding-right:5%;
            padding-top: 5px;
        }
       
    </style>
</head>

<body>
    <div class="listContact">
        <table class="ui celled padded table">
            <thead>
                <tr>
                    <th class="single line">Avatar</th>
                    <th>FullName</th>
                    <th>Contract Method</th>
                    <th>Message</th>
                    <th>executed</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listContactUsRequests)
                {
                    <tr>
                        <td>
                            <h2 class="ui center aligned header">A</h2>
                        </td>
                        <td class="single line">
                            @Html.DisplayFor(a=>item.Email);
                        </td>

                        <td class="single line">
                            SĐT :<a href="#">@Html.DisplayFor(a=>item.BusinessPhone)</a>
                            <br>
                            Email :<a href="#">@Html.DisplayFor(a=>item.Email)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(a=>item.Message)
                        </td>
                        <td>
                            <div class="single line" style="display:flex; justify-content: center;">
                                <a href="#"> <i class="angle double right icon" style="size: 25pxpx;"></i></a>
                                
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th colspan="5">
                        <div class="ui right floated pagination menu">
                            <a class="icon item">
                                <i class="left chevron icon"></i>
                            </a>
                            <a class="item">1</a>
                            <a class="item">2</a>
                            <a class="item">3</a>
                            <a class="item">4</a>
                            <a class="icon item">
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
  
</body>