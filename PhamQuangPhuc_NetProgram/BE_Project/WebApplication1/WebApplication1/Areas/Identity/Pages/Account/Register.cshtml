@page
@model RegisterModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- copy qua -->
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/reset.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/site.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/container.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/grid.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/header.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/image.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/menu.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/divider.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/message.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/dropdown.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/segment.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/button.css">


    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/icon.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/sidebar.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/transition.css">

    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/form.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/input.css">
    <link rel="stylesheet" type="text/css" href="~/semantic-ui-master/dist/components/list.css">

    <script src="~/semantic-ui-master/examples/assets/library/jquery.min.js"></script>
    <script src="~/semantic-ui-master/dist/components/visibility.js"></script>
    <script src="~/semantic-ui-master/dist/components/sidebar.js"></script>
    <script src="~/semantic-ui-master/dist/components/transition.js"></script>


    <!-- only for form -->
    <script src="~/semantic-ui-master/dist/components/form.js"></script>
    <script src="~/semantic-ui-master/dist/components/transition.js"></script>
    <style type="text/css">
        body {
            background-color: #DADADA;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        .body_login {
            height: 80vh;
        }

        .image {
            margin-top: -100px;
        }

        .column {
            max-width: 450px;
        }
    </style>
    <script>
        $(document)
            .ready(function () {
                $('.ui.form')
                    .form({
                        fields: {
                            email: {
                                identifier: 'Input.Email',
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Please enter your e-mail'
                                    },
                                    {
                                        type: 'email',
                                        prompt: 'Please enter a valid e-mail'
                                    }
                                ]
                            },
                            password: {
                                identifier: 'Input.Password',
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Please enter your password'
                                    },
                                    {
                                        type: 'length[6]',
                                        prompt: 'Your password must be at least 6 characters'
                                    }
                                ]
                            },
                            registerCaptcha: {
                                identifier: 'Input.Captcha',
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Please do Captcha'
                                    },

                                ]
                            }
                        }
                    })
                    ;
            });
    </script>

    <script type="text/javascript">
        var registerCaptcha;
        // var widgetId2;
        console.log(registerCaptcha);
        var onloadCallback = function () {
            registerCaptcha = grecaptcha.render('captcha-register', {
                'sitekey': '6LeopYUpAAAAADxWOfgRfwhmKFhGGzGVVU_o0n7L',
                'theme': 'light',
                'callback': function (response) {
                    // Update the value of the hidden input field with the reCAPTCHA response
                    document.getElementById('input-captcha').value = response;
                }
            });

        };
    </script>
</head>

<body>

    <div class="ui middle aligned center aligned grid body_login">
        <div class="column">
            <h2 class="ui teal image header">
                <img src="~/semantic-ui-master/examples/assets/images/logo.png" class="image">
                <div class="content">
                    Register
                </div>
            </h2>
            <form class="ui large form" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input ">
                            <i class="user icon"></i>
                            @*   <input type="text" name="email" placeholder="E-mail address" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" /> *@
                            <input type="text" id="test" placeholder="E-mail address" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <br />
                            <div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" placeholder="Password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />

                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button class="ui fluid large teal submit button" type="submit">Log in</button>
                    </div>
                    <div class="field" style="display: flex; justify-content: center;">
                        <input type="hidden" id="input-captcha" asp-for="Input.Captcha" />
                        <div id="captcha-login"> </div>
                        <span asp-validation-for="Input.Captcha" class="text-danger"></span>
                        <br>
                        <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
                                async defer>
                        </script>

                    </div>
                </div>

                <div class="ui error message"></div>

            </form>

            <div class="ui message">
                New to us? <a href="#">Sign Up</a>
            </div>
        </div>
    </div>
</body>

</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
